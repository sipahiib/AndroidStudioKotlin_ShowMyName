<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlan"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtisimGoster"
        android:layout_width="273dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="@color/gorseller"
        android:hint="@string/isimGoster"
        android:paddingTop="15dp"
        android:text="@string/isimGoster"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btnGoster"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/btnGoster"
        app:layout_constraintTop_toBottomOf="@+id/btnGoster" />

    <Button
        android:id="@+id/btnGoster"
        android:layout_width="273dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:background="@color/design_default_color_primary"
        android:text="@string/tikla"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtisimGir"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/txtisimGir"
        app:layout_constraintTop_toBottomOf="@+id/txtisimGir" />

    <EditText
        android:id="@+id/txtisimGir"
        android:layout_width="273dp"
        android:layout_height="44dp"
        android:layout_marginTop="168dp"
        android:autofillHints=""
        android:background="@color/gorseller"
        android:ems="10"
        android:hint="@string/isimGir"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/isimGir"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>